<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
  http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

	<bean id="fileStore" class="org.apache.camel.processor.idempotent.FileIdempotentRepository">
		<!-- the filename for the store -->
    	<property name="fileStore" value="${edex.home}/data/ooi/camds-b_telemetered/.filestore.dat"/>  <!-- Delete this file to re-test previously downloaded raw data -->
    	<!-- the max filesize in bytes for the file. Camel will trunk and flush the cache if the file gets bigger -->
		<property name="maxFileStoreSize" value="512000"/>
		<!-- the number of elements in our store -->
		<property name="cacheSize" value="250"/>
	</bean>

    <camelContext id="camds-b-decode-camel"
        xmlns="http://camel.apache.org/schema/spring" errorHandlerRef="errorHandler">

	<endpoint id="camds-b_recoveredFTPEndpoint"
        	    uri="smb://guest@10.180.80.160/DCIM?include=.*.png&amp;backoffMultiplier=10&amp;backoffIdleThreshold=3&amp;idempotent=true&amp;idempotentRepository=#fileStore&amp;runLoggingLevel=TRACE&amp;maxMessagesPerPoll=30" />

        <endpoint id="camds-b_recoveredFileEndpoint"
                    uri="file:${edex.home}/data/ooi/camds-b_telemetered?include=.*.png&amp;delete=true&amp;runLoggingLevel=TRACE&amp;maxMessagesPerPoll=30" />

        <route id="camds-b_recoveredFTPConsumerRoute">
            <from ref="camds-b_recoveredFTPEndpoint" />
            <to ref="camds-b_recoveredFileEndpoint" />
        </route>

    </camelContext>
</beans>