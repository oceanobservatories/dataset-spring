<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
  http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

	<!-- CG DCL ENG Telemetered processing configuration -->
    <bean id="cgDclEngTProcessor" class="com.raytheon.uf.edex.ooi.decoder.dataset.FileDecoder">
        <constructor-arg name="name" value="CG_DCL_ENG_T" />
        <constructor-arg name="basePythonCodePath" value="#{basePythonCodeLocalizationPath}" />
        <constructor-arg name="scriptPath" value="#{basePythonCodeLocalizationPath}/mi/dataset/driver/cg_dcl_eng/dcl/cg_dcl_eng_dcl_telemetered_driver.py" />
    </bean>

	<!-- CG DCL ENG Recovered processing configuration -->
    <bean id="cgDclEngRProcessor" class="com.raytheon.uf.edex.ooi.decoder.dataset.FileDecoder">
        <constructor-arg name="name" value="CG_DCL_ENG_R" />
        <constructor-arg name="basePythonCodePath" value="#{basePythonCodeLocalizationPath}" />
        <constructor-arg name="scriptPath" value="#{basePythonCodeLocalizationPath}/mi/dataset/driver/cg_dcl_eng/dcl/cg_dcl_eng_dcl_recovered_driver.py" />
    </bean>

	<!-- CG DCL ENG camel configuration -->
    <camelContext id="cg-dcl-eng-decode-camel"
        xmlns="http://camel.apache.org/schema/spring" errorHandlerRef="errorHandler">

        <endpoint id="cgDclEngTFileEndpoint"
            uri="file:${edex.home}/data/ooi/cgDclEng/dclTelemetered?delete=true&amp;delay=5000&amp;maxMessagesPerPoll=1000&amp;exclusiveReadLockStrategy=#fileChangedStrategy" />

        <endpoint id="cgDclEngRFileEndpoint"
            uri="file:${edex.home}/data/ooi/cgDclEng/dclRecovered?delete=true&amp;delay=5000&amp;maxMessagesPerPoll=1000&amp;exclusiveReadLockStrategy=#fileChangedStrategy" />

        <route id="cgDclEngTFileConsumerRoute">
            <from ref="cgDclEngTFileEndpoint" />
            <bean ref="fileToString" />
            <setHeader headerName="deliveryType">
                <constant>telemetered</constant>
            </setHeader>
            <setHeader headerName="sensor">
                <constant>XX00XXXX-XX00X-00-CGDCLE000</constant>
            </setHeader>  
            <to uri="jms-durable:queue:Ingest.cgDclEngT" />
        </route>

        <route id="cgDclEngRFileConsumerRoute">
            <from ref="cgDclEngRFileEndpoint" />
            <bean ref="fileToString" />
            <setHeader headerName="deliveryType">
                <constant>recovered</constant>
            </setHeader>
            <setHeader headerName="sensor">
                <constant>XX00XXXX-XX00X-00-CGDCLE100</constant>
            </setHeader>  
            <to uri="jms-durable:queue:Ingest.cgDclEngR" />
        </route>

        <route id="cgDclEngTIngest">
            <from uri="jms-durable:queue:Ingest.cgDclEngT" />
            <doTry>
                <pipeline>
                    <bean ref="cgDclEngTProcessor" />
                    <to uri="direct-vm:persistIndexAlert" />
                </pipeline>
                <doCatch>
                    <exception>java.lang.Throwable</exception>
                    <to uri="log:ooi.cgDclEngT?level=ERROR" />
                </doCatch>
            </doTry>
        </route>

        <route id="cgDclEngRIngest">
            <from uri="jms-durable:queue:Ingest.cgDclEngR" />
            <doTry>
                <pipeline>
                    <bean ref="cgDclEngRProcessor" />
                    <to uri="direct-vm:persistIndexAlert" />
                </pipeline>
                <doCatch>
                    <exception>java.lang.Throwable</exception>
                    <to uri="log:ooi.cgDclEngR?level=ERROR" />
                </doCatch>
            </doTry>
        </route>
    </camelContext>
</beans>