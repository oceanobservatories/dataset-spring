<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
  http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

    <bean id="ctdav-n-auv_telemeteredProcessor" class="com.raytheon.uf.edex.ooi.decoder.dataset.FileDecoder">
        <constructor-arg index="0" value="ctdav-n-auv_telemetered" />
        <constructor-arg index="1" value="#{basePythonCodeLocalizationPath}" />
        <constructor-arg index="2" value="mi.dataset.driver.ctdav_n.auv.ctdav_n_auv_telemetered_driver" />
    </bean>

    <bean id="ctdav-n-auv_recoveredProcessor" class="com.raytheon.uf.edex.ooi.decoder.dataset.FileDecoder">
        <constructor-arg index="0" value="ctdav-n-auv_recovered" />
        <constructor-arg index="1" value="#{basePythonCodeLocalizationPath}" />
        <constructor-arg index="2" value="mi.dataset.driver.ctdav_n.auv.ctdav_n_auv_recovered_driver" />
    </bean>

    <camelContext id="ctdav-n-auv-decode-camel"
        xmlns="http://camel.apache.org/schema/spring" errorHandlerRef="errorHandler">

        <endpoint id="ctdav-n-auv_telemeteredFileEndpoint"
            uri="file:${edex.home}/data/ooi/ctdav-n-auv_telemetered?delete=true&amp;delay=3000&amp;maxMessagesPerPoll=30&amp;exclusiveReadLockStrategy=#fileChangedStrategy" />

        <endpoint id="ctdav-n-auv_recoveredFileEndpoint"
            uri="file:${edex.home}/data/ooi/ctdav-n-auv_recovered?delete=true&amp;delay=3000&amp;maxMessagesPerPoll=30&amp;exclusiveReadLockStrategy=#fileChangedStrategy" />

        <route id="ctdav-n-auv_telemeteredFileConsumerRoute">
            <from ref="ctdav-n-auv_telemeteredFileEndpoint" />
            <setHeader headerName="deliveryType">
                <constant>telemetered</constant>
            </setHeader>
            <setHeader headerName="sensor">
                <constant>XX00XXXX-XX00X-00-CTDNAT000</constant>
            </setHeader>
            <bean ref="fileToString" />
            <to uri="jms-durable:queue:Ingest.ctdav-n-auv_telemetered" />
        </route>

        <route id="ctdav-n-auv_telemeteredIngest">
            <from uri="jms-durable:queue:Ingest.ctdav-n-auv_telemetered?concurrentConsumers=4" />
            <doTry>
                <pipeline>
                    <bean ref="ctdav-n-auv_telemeteredProcessor" />
                    <to uri="vm:generate?concurrentConsumers=10" />
                </pipeline>
                <doCatch>
                    <exception>java.lang.Throwable</exception>
                    <to uri="log:ooi.ctdav-n-auv?level=ERROR" />
                </doCatch>
            </doTry>
        </route>

        <route id="ctdav-n-auv_recoveredFileConsumerRoute">
            <from ref="ctdav-n-auv_recoveredFileEndpoint" />
            <setHeader headerName="deliveryType">
                <constant>recovered</constant>
            </setHeader>
            <setHeader headerName="sensor">
                <constant>XX00XXXX-XX00X-00-CTDNAR000</constant>
            </setHeader>
            <bean ref="fileToString" />
            <to uri="jms-durable:queue:Ingest.ctdav-n-auv_recovered" />
        </route>

        <route id="ctdav-n-auv_recoveredIngest">
            <from uri="jms-durable:queue:Ingest.ctdav-n-auv_recovered?concurrentConsumers=4" />
            <doTry>
                <pipeline>
                    <bean ref="ctdav-n-auv_recoveredProcessor" />
                    <to uri="vm:generate?concurrentConsumers=10" />
                </pipeline>
                <doCatch>
                    <exception>java.lang.Throwable</exception>
                    <to uri="log:ooi.ctdav-n-auv?level=ERROR" />
                </doCatch>
            </doTry>
        </route>

    </camelContext>
</beans>