<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
  http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

    <bean id="ctdbpCdefCpRecoveredProcessor" class="com.raytheon.uf.edex.ooi.decoder.dataset.FileDecoder">
        <constructor-arg name="name" value="CTDBP_CDEF_CP_RECOVERED" />
        <constructor-arg name="basePythonCodePath" value="#{basePythonCodeLocalizationPath}" />
        <constructor-arg name="scriptPath" value="#{basePythonCodeLocalizationPath}/mi/dataset/driver/ctdbp_cdef/cp/ctdbp_cdef_cp_driver.py" />
    </bean>

    <camelContext id="ctdbp-cdef-cp-decode-camel"
        xmlns="http://camel.apache.org/schema/spring" errorHandlerRef="errorHandler">

        <endpoint id="ctdbpCdefCpRecoveredFileEndpoint"
            uri="file:${edex.home}/data/ooi/ctdbp_cdef_cp/recovered?delete=true&amp;delay=5000&amp;maxMessagesPerPoll=1000&amp;exclusiveReadLockStrategy=#fileChangedStrategy" />

        <route id="ctdbpCdefCpRecoveredFileConsumerRoute">
            <from ref="ctdbpCdefCpRecoveredFileEndpoint" />
            <bean ref="fileToString" />
            <setHeader headerName="deliveryType">
                <constant>recovered</constant>
            </setHeader>
            <setHeader headerName="sensor">
                <constant>XX00XXXX-XX00X-00-CTDBPCDEFCPR0</constant>
            </setHeader>  
            <to uri="jms-ooi-dataset:queue:Ingest.ctdbpCdefCpRecovered" />
        </route>
        
        <route id="ctdbpCdefCpRecoveredIngest">
            <from uri="jms-ooi-dataset:queue:Ingest.ctdbpCdefCpRecovered" />
            <doTry>
                <pipeline>
                    <bean ref="ctdbpCdefCpRecoveredProcessor" />
                    <to uri="direct-vm:persistIndexAlert" />
                </pipeline>
                <doCatch>
                    <exception>java.lang.Throwable</exception>
                    <to uri="log:ooi.ctdbpCdefCpRecovered?level=ERROR" />
                </doCatch>
            </doTry>
        </route>

    </camelContext>
</beans>