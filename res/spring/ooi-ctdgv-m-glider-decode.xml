<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
  http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

    <bean id="ctdgv-m-glider_recoveredProcessor" class="com.raytheon.uf.edex.ooi.decoder.dataset.FileDecoder">
        <constructor-arg index="0" value="ctdgv-m-glider_recovered" />
        <constructor-arg index="1" value="#{basePythonCodeLocalizationPath}" />
        <constructor-arg index="2" value="mi.dataset.driver.moas.gl.ctdgv.ctdgv_m_glider_recovered_driver" />
    </bean>

    <bean id="ctdgv-m-glider_telemeteredProcessor" class="com.raytheon.uf.edex.ooi.decoder.dataset.FileDecoder">
        <constructor-arg index="0" value="ctdgv-m-glider_telemetered" />
        <constructor-arg index="1" value="#{basePythonCodeLocalizationPath}" />
        <constructor-arg index="2" value="mi.dataset.driver.moas.gl.ctdgv.ctdgv_m_glider_telemetered_driver" />
    </bean>

    <camelContext id="ctdgv-m-glider-decode-camel"
        xmlns="http://camel.apache.org/schema/spring" errorHandlerRef="errorHandler">


        <route id="ctdgv-m-glider_recoveredIngest">
            <from uri="jms-durable:queue:Ingest.ctdgv-m-glider_recovered?concurrentConsumers=1&amp;maxConcurrentConsumers=10&amp;disableReplyTo=true" />
            <doTry>
                <pipeline>
                    <bean ref="ctdgv-m-glider_recoveredProcessor" />
                    <to uri="direct-vm:generate?timeout=720000" />
                    <!-- 720000ms = 12 minutes -->
                </pipeline>
                <doCatch>
                    <exception>java.lang.Throwable</exception>
                    <to uri="log:ooi.ctdgv-m-glider?level=ERROR" />
                </doCatch>
            </doTry>
        </route>


        <route id="ctdgv-m-glider_telemeteredIngest">
            <from uri="jms-durable:queue:Ingest.ctdgv-m-glider_telemetered?concurrentConsumers=1&amp;maxConcurrentConsumers=10&amp;disableReplyTo=true" />
            <doTry>
                <pipeline>
                    <bean ref="ctdgv-m-glider_telemeteredProcessor" />
                    <to uri="direct-vm:generate?timeout=720000" />
                    <!-- 720000ms = 12 minutes -->
                </pipeline>
                <doCatch>
                    <exception>java.lang.Throwable</exception>
                    <to uri="log:ooi.ctdgv-m-glider?level=ERROR" />
                </doCatch>
            </doTry>
        </route>

    </camelContext>
</beans>