<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
  http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

    <bean id="dostaLnWfpRecoveredProcessor" class="com.raytheon.uf.edex.ooi.decoder.dataset.FileDecoder">
        <constructor-arg name="name" value="DOSTA_LN_WFP_RECOVERED" />
        <constructor-arg name="basePythonCodePath" value="#{basePythonCodeLocalizationPath}" />
        <constructor-arg name="scriptPath" value="#{basePythonCodeLocalizationPath}/mi/dataset/driver/dosta_ln/wfp/dosta_ln_wfp_driver.py" />
    </bean>

    <camelContext id="dosta-ln-wfp-decode-camel"
        xmlns="http://camel.apache.org/schema/spring" errorHandlerRef="errorHandler">

        <endpoint id="dostaLnWfpRecoveredFileEndpoint"
            uri="file:${edex.home}/data/ooi/dosta_ln_wfp/recovered?delete=true&amp;delay=5000&amp;maxMessagesPerPoll=1000&amp;exclusiveReadLockStrategy=#fileChangedStrategy" />

        <route id="dostaLnWfpRecoveredFileConsumerRoute">
            <from ref="dostaLnWfpRecoveredFileEndpoint" />
            <bean ref="fileToString" />
            <setHeader headerName="deliveryType">
                <constant>recovered</constant>
            </setHeader>
            <setHeader headerName="sensor">
                <constant>XX00XXXX-XX00X-00-DOSTLN000</constant>
            </setHeader>  
            <to uri="jms-ooi-dataset:queue:Ingest.dostaLnWfpRecovered" />
        </route>
        
        <route id="dostaLnWfpRecoveredIngest">
            <from uri="jms-ooi-dataset:queue:Ingest.dostaLnWfpRecovered" />
            <doTry>
                <pipeline>
                    <bean ref="dostaLnWfpRecoveredProcessor" />
                    <to uri="direct-vm:persistIndexAlert" />
                </pipeline>
                <doCatch>
                    <exception>java.lang.Throwable</exception>
                    <to uri="log:ooi.dostaLnWfpRecovered?level=ERROR" />
                </doCatch>
            </doTry>
        </route>

    </camelContext>
</beans>