<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
  http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

	<!-- FLORD_L_WFP processing configuration -->
    <bean id="flordLWfpProcessor" class="com.raytheon.uf.edex.ooi.decoder.dataset.FileDecoder">
        <constructor-arg name="name" value="FLORD_L_WFP" />
        <constructor-arg name="basePythonCodePath" value="#{basePythonCodeLocalizationPath}" />
        <constructor-arg name="scriptPath" value="#{basePythonCodeLocalizationPath}/mi/dataset/driver/flord_l_wfp/flord_l_wfp_recovered_driver.py" />
    </bean>

	<!-- FLORD_L_WFP camel configuration -->
    <camelContext id="flord-l-wfp-decode-camel"
        xmlns="http://camel.apache.org/schema/spring" errorHandlerRef="errorHandler">

        <endpoint id="flordLWfpFileEndpoint"
            uri="file:${edex.home}/data/ooi/flord_l_wfp?delete=true&amp;delay=5000&amp;maxMessagesPerPoll=1000&amp;exclusiveReadLockStrategy=#fileChangedStrategy" />

        <route id="flordLWfpFileConsumerRoute">
            <from ref="flordLWfpFileEndpoint" />
            <bean ref="fileToString" />
            <setHeader headerName="deliveryType">
                <constant>recovered</constant>
            </setHeader>
            <setHeader headerName="sensor">
                <constant>XX00XXXX-XX00X-00-FLORDL000</constant>
            </setHeader>  
            <to uri="jms-durable:queue:Ingest.flordLWfp" />
        </route>

        <route id="flordLWfpIngest">
            <from uri="jms-durable:queue:Ingest.flordLWfp" />
            <doTry>
                <pipeline>
                    <bean ref="flordLWfpProcessor" />
                    <to uri="direct-vm:persistIndexAlert" />
                </pipeline>
                <doCatch>
                    <exception>java.lang.Throwable</exception>
                    <to uri="log:ooi.flordLWfp?level=ERROR" />
                </doCatch>
            </doTry>
        </route>

    </camelContext>
</beans>