<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
  http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

    <bean id="metbkADclRecoveredProcessor" class="com.raytheon.uf.edex.ooi.decoder.dataset.FileDecoder">
        <constructor-arg name="name" value="METBK_A_RECOVERED" />
        <constructor-arg name="basePythonCodePath" value="#{basePythonCodeLocalizationPath}" />
        <constructor-arg name="scriptPath" value="#{basePythonCodeLocalizationPath}/mi/dataset/driver/metbk_a/dcl/metbk_a_dcl_recovered_driver.py" />
    </bean>
    
    <bean id="metbkADclTelemeteredProcessor" class="com.raytheon.uf.edex.ooi.decoder.dataset.FileDecoder">
        <constructor-arg name="name" value="METBK_A_TELEMETERED" />
        <constructor-arg name="basePythonCodePath" value="#{basePythonCodeLocalizationPath}" />
        <constructor-arg name="scriptPath" value="#{basePythonCodeLocalizationPath}/mi/dataset/driver/metbk_a/dcl/metbk_a_dcl_telemetered_driver.py" />
    </bean>

    <camelContext id="metbk-a-decode-camel"
        xmlns="http://camel.apache.org/schema/spring" errorHandlerRef="errorHandler">

        <endpoint id="metbkARecoveredFileEndpoint"
            uri="file:${edex.home}/data/ooi/metbk_a/recovered?delete=true&amp;delay=5000&amp;maxMessagesPerPoll=1000&amp;exclusiveReadLockStrategy=#fileChangedStrategy" />
            
        <endpoint id="metbkATelemeteredFileEndpoint"
            uri="file:${edex.home}/data/ooi/metbk_a/telemetered?delete=true&amp;delay=5000&amp;maxMessagesPerPoll=1000&amp;exclusiveReadLockStrategy=#fileChangedStrategy" />

        <route id="metbkARecoveredFileConsumerRoute">
            <from ref="metbkARecoveredFileEndpoint" />
            <bean ref="fileToString" />
            <setHeader headerName="deliveryType">
                <constant>recovered</constant>
            </setHeader>
            <setHeader headerName="sensor">
                <constant>XX00XXXX-XX00X-00-METBKAR0</constant>
            </setHeader>  
            <to uri="jms-durable:queue:Ingest.metbkARecovered" />
        </route>
        
        <route id="metbkATelemeteredFileConsumerRoute">
            <from ref="metbkATelemeteredFileEndpoint" />
            <bean ref="fileToString" />
            <setHeader headerName="deliveryType">
                <constant>telemetered</constant>
            </setHeader>
            <setHeader headerName="sensor">
                <constant>XX00XXXX-XX00X-00-METBKAT0</constant>
            </setHeader>  
            <to uri="jms-durable:queue:Ingest.metbkATelemetered" />
        </route>
        
        <route id="metbkARecoveredIngest">
            <from uri="jms-durable:queue:Ingest.metbkARecovered" />
            <doTry>
                <pipeline>
                    <bean ref="metbkADclRecoveredProcessor" />
                    <to uri="direct-vm:persistIndexAlert" />
                </pipeline>
                <doCatch>
                    <exception>java.lang.Throwable</exception>
                    <to uri="log:ooi.metbkARecovered?level=ERROR" />
                </doCatch>
            </doTry>
        </route>
        
        <route id="metbkATelemeteredIngest">
            <from uri="jms-durable:queue:Ingest.metbkATelemetered" />
            <doTry>
                <pipeline>
                    <bean ref="metbkADclTelemeteredProcessor" />
                    <to uri="direct-vm:persistIndexAlert" />
                </pipeline>
                <doCatch>
                    <exception>java.lang.Throwable</exception>
                    <to uri="log:ooi.metbkATelemetered?level=ERROR" />
                </doCatch>
            </doTry>
        </route>        

    </camelContext>
</beans>