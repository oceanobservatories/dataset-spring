<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
  http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

    <bean id="nutnr-b-dcl-conc_recoveredProcessor" class="com.raytheon.uf.edex.ooi.decoder.dataset.FileDecoder">
        <constructor-arg index="0" value="nutnr-b-dcl-conc_recovered" />
        <constructor-arg index="1" value="#{basePythonCodeLocalizationPath}" />
        <constructor-arg index="2" value="mi.dataset.driver.nutnr_b.dcl_conc.nutnr_b_dcl_conc_recovered_driver" />
    </bean>

    <bean id="nutnr-b-dcl-conc_telemeteredProcessor" class="com.raytheon.uf.edex.ooi.decoder.dataset.FileDecoder">
        <constructor-arg index="0" value="nutnr-b-dcl-conc_telemetered" />
        <constructor-arg index="1" value="#{basePythonCodeLocalizationPath}" />
        <constructor-arg index="2" value="mi.dataset.driver.nutnr_b.dcl_conc.nutnr_b_dcl_conc_telemetered_driver" />
    </bean>

    <camelContext id="nutnr-b-dcl-conc-decode-camel"
        xmlns="http://camel.apache.org/schema/spring" errorHandlerRef="errorHandler">

        <endpoint id="nutnr-b-dcl-conc_recoveredFileEndpoint"
            uri="file:${edex.home}/data/ooi/nutnr-b-dcl-conc_recovered?delete=true&amp;delay=3000&amp;maxMessagesPerPoll=30&amp;exclusiveReadLockStrategy=#fileChangedStrategy" />

        <endpoint id="nutnr-b-dcl-conc_telemeteredFileEndpoint"
            uri="file:${edex.home}/data/ooi/nutnr-b-dcl-conc_telemetered?delete=true&amp;delay=3000&amp;maxMessagesPerPoll=30&amp;exclusiveReadLockStrategy=#fileChangedStrategy" />

        <route id="nutnr-b-dcl-conc_recoveredFileConsumerRoute">
            <from ref="nutnr-b-dcl-conc_recoveredFileEndpoint" />
            <setHeader headerName="deliveryType">
                <constant>recovered</constant>
            </setHeader>
            <setHeader headerName="sensor">
                <constant>XX00XXXX-XX00X-00-NUTNRR010</constant>
            </setHeader>
            <bean ref="fileToString" />
            <to uri="jms-durable:queue:Ingest.nutnr-b-dcl-conc_recovered" />
        </route>

        <route id="nutnr-b-dcl-conc_recoveredIngest">
            <from uri="jms-durable:queue:Ingest.nutnr-b-dcl-conc_recovered?concurrentConsumers=4" />
            <doTry>
                <pipeline>
                    <bean ref="nutnr-b-dcl-conc_recoveredProcessor" />
                    <to uri="vm:generate?concurrentConsumers=10" />
                </pipeline>
                <doCatch>
                    <exception>java.lang.Throwable</exception>
                    <to uri="log:ooi.nutnr-b-dcl-conc?level=ERROR" />
                </doCatch>
            </doTry>
        </route>

        <route id="nutnr-b-dcl-conc_telemeteredFileConsumerRoute">
            <from ref="nutnr-b-dcl-conc_telemeteredFileEndpoint" />
            <setHeader headerName="deliveryType">
                <constant>telemetered</constant>
            </setHeader>
            <setHeader headerName="sensor">
                <constant>XX00XXXX-XX00X-00-NUTNRT010</constant>
            </setHeader>
            <bean ref="fileToString" />
            <to uri="jms-durable:queue:Ingest.nutnr-b-dcl-conc_telemetered" />
        </route>

        <route id="nutnr-b-dcl-conc_telemeteredIngest">
            <from uri="jms-durable:queue:Ingest.nutnr-b-dcl-conc_telemetered?concurrentConsumers=4" />
            <doTry>
                <pipeline>
                    <bean ref="nutnr-b-dcl-conc_telemeteredProcessor" />
                    <to uri="vm:generate?concurrentConsumers=10" />
                </pipeline>
                <doCatch>
                    <exception>java.lang.Throwable</exception>
                    <to uri="log:ooi.nutnr-b-dcl-conc?level=ERROR" />
                </doCatch>
            </doTry>
        </route>

    </camelContext>
</beans>