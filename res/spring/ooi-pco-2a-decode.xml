<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
  http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

    <bean id="pco2aDclRecoveredProcessor" class="com.raytheon.uf.edex.ooi.decoder.dataset.FileDecoder">
        <constructor-arg name="name" value="PCO_2A_RECOVERED" />
        <constructor-arg name="basePythonCodePath" value="#{basePythonCodeLocalizationPath}" />
        <constructor-arg name="scriptPath" value="#{basePythonCodeLocalizationPath}/mi/dataset/driver/pco_2a/dcl/pco_2a_dcl_recovered_driver.py" />
    </bean>
    
    <bean id="pco2aDclTelemeteredProcessor" class="com.raytheon.uf.edex.ooi.decoder.dataset.FileDecoder">
        <constructor-arg name="name" value="PCO_2A_TELEMETERED" />
        <constructor-arg name="basePythonCodePath" value="#{basePythonCodeLocalizationPath}" />
        <constructor-arg name="scriptPath" value="#{basePythonCodeLocalizationPath}/mi/dataset/driver/pco_2a/dcl/pco_2a_dcl_telemetered_driver.py" />
    </bean>

    <camelContext id="pco-2a-decode-camel"
        xmlns="http://camel.apache.org/schema/spring" errorHandlerRef="errorHandler">

        <endpoint id="pco2aRecoveredFileEndpoint"
            uri="file:${edex.home}/data/ooi/pco_2a/pco2a_dcl_recovered?delete=true&amp;delay=5000&amp;maxMessagesPerPoll=1000&amp;exclusiveReadLockStrategy=#fileChangedStrategy" />
            
        <endpoint id="pco2aTelemeteredFileEndpoint"
            uri="file:${edex.home}/data/ooi/pco_2a/pco2a_dcl_telemetered?delete=true&amp;delay=5000&amp;maxMessagesPerPoll=1000&amp;exclusiveReadLockStrategy=#fileChangedStrategy" />

        <route id="pco2aRecoveredFileConsumerRoute">
            <from ref="pco2aRecoveredFileEndpoint" />
            <bean ref="fileToString" />
            <setHeader headerName="deliveryType">
                <constant>recovered</constant>
            </setHeader>
            <setHeader headerName="sensor">
                <constant>XX00XXXX-XX00X-00-PCO2AR0</constant>
            </setHeader>  
            <to uri="jms-durable:queue:Ingest.pco2aRecovered" />
        </route>
        
        <route id="pco2aTelemeteredFileConsumerRoute">
            <from ref="pco2aTelemeteredFileEndpoint" />
            <bean ref="fileToString" />
            <setHeader headerName="deliveryType">
                <constant>telemetered</constant>
            </setHeader>
            <setHeader headerName="sensor">
                <constant>XX00XXXX-XX00X-00-PCO2AT0</constant>
            </setHeader>  
            <to uri="jms-durable:queue:Ingest.pco2aTelemetered" />
        </route>
        
        <route id="pco2aRecoveredIngest">
            <from uri="jms-durable:queue:Ingest.pco2aRecovered" />
            <doTry>
                <pipeline>
                    <bean ref="pco2aDclRecoveredProcessor" />
                    <to uri="direct-vm:persistIndexAlert" />
                </pipeline>
                <doCatch>
                    <exception>java.lang.Throwable</exception>
                    <to uri="log:ooi.pco2aRecovered?level=ERROR" />
                </doCatch>
            </doTry>
        </route>
        
        <route id="pco2aTelemeteredIngest">
            <from uri="jms-durable:queue:Ingest.pco2aTelemetered" />
            <doTry>
                <pipeline>
                    <bean ref="pco2aDclTelemeteredProcessor" />
                    <to uri="direct-vm:persistIndexAlert" />
                </pipeline>
                <doCatch>
                    <exception>java.lang.Throwable</exception>
                    <to uri="log:ooi.pco2aTelemetered?level=ERROR" />
                </doCatch>
            </doTry>
        </route>        

    </camelContext>
</beans>