<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
  http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

	<!-- VEL3D_AMMP_CDS processing configuration -->
    <bean id="vel3dAMmpCdsProcessor" class="com.raytheon.uf.edex.ooi.decoder.dataset.FileDecoder">
        <constructor-arg name="name" value="VEL3D_AMMP_CDS" />
        <constructor-arg name="basePythonCodePath" value="#{basePythonCodeLocalizationPath}" />
        <constructor-arg name="scriptPath" value="#{basePythonCodeLocalizationPath}/mi/dataset/driver/vel3d_a/mmp_cds/vel3d_a_mmp_cds_recovered_driver.py" />
    </bean>

	<!-- VEL3D_AMMP_CDS camel configuration -->
    <camelContext id="flntu-x-mmp-cds-decode-camel"
        xmlns="http://camel.apache.org/schema/spring" errorHandlerRef="errorHandler">

        <endpoint id="vel3dAMmpCdsFileEndpoint"
            uri="file:${edex.home}/data/ooi/vel3d_a_mmp_cds?delete=true&amp;delay=5000&amp;maxMessagesPerPoll=1000&amp;exclusiveReadLockStrategy=#fileChangedStrategy" />

        <route id="vel3dAMmpCdsFileConsumerRoute">
            <from ref="vel3dAMmpCdsFileEndpoint" />
            <bean ref="fileToString" />
            <setHeader headerName="deliveryType">
                <constant>recovered</constant>
            </setHeader>
            <setHeader headerName="sensor">
                <constant>XX00XXXX-XX00X-00-FLNTUX000</constant>
            </setHeader>  
            <to uri="jms-durable:queue:Ingest.vel3dAMmpCds" />
        </route>

        <route id="vel3dAMmpCdsIngest">
            <from uri="jms-durable:queue:Ingest.vel3dAMmpCds" />
            <doTry>
                <pipeline>
                    <bean ref="vel3dAMmpCdsProcessor" />
                    <to uri="direct-vm:persistIndexAlert" />
                </pipeline>
                <doCatch>
                    <exception>java.lang.Throwable</exception>
                    <to uri="log:ooi.vel3dAMmpCds?level=ERROR" />
                </doCatch>
            </doTry>
        </route>

    </camelContext>
</beans>